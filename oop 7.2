#include<iostream>
#include<cstring>
using namespace std;

class Doctor  //class Doctor created
{
    private:
    char name[30], area[30];
    
    public:
    void readData();  //defining function for reading data
    void sortList();  //defining function for sorting the list
    void displayArea(); //defining function for disp the area in alphabetical order 
    
    int operator <(Doctor D)  //function for overloading < operator
    {
        if(area<D.area)
        {
            return 1;
        }
        else if(area>D.area)
        {
            return 0;
        }
    }
    
    
};

const int size=5;    //array size
int arr;
Doctor details[size];   //array for inputting details of 5 doctors
Doctor temp;

void Doctor::readData()  //defining the function for reading the doctors' data
{
    for(int i=0; i<size; i++)
    {
        cout<<"Enter the name of the Doctor: "<<endl;
        cin>>details[i].name;
        
        cout<<"Enter the area: "<<endl;
        cin>>details[i].area;
    }
    
}

void Doctor::sortList()  //defining the function for sorting the doctors' data in alphabetical order 
{
    int i, j;
    for(i=0;i<size;i++)
	{		
		for(j=i+1;j<size;j++)
		{
		    
			if(strcmp(details[i].area,details[j].area)>=0)      
			{
				temp=details[i];                           
				details[i]=details[j];
				details[j]=temp;
			}
		}
	}
    
	for(int i=0;i<size;i++)      //for displaying the list in alphabetical order
	{
	    cout<<"Doctor name: "<<details[i].name<<endl;
	    cout<<"Doctor area: "<<details[i].area<<endl;
	}
}

void Doctor::displayArea()     //defining the function for displaying the area in alphabetical order
{
    for(int i=0; i<size; i++)
    {
        cout<<"Area: "<<details[i].area<<endl;    
    }
    
}


int main()
{
    Doctor d1, d2;  //objects d1 and d2 created
    d1.readData();
    d1.sortList();
    if(d1<d2)
        d1.displayArea();
    else
        d2.displayArea();
    
}
